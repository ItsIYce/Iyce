--// ðŸŸ¢ STATUS INDICATORS (Under Player Name)
local function CreateStatus(name, pos)
    local Container = Instance.new("Frame", Sidebar)
    Container.Size = UDim2.new(1, -20, 0, 20)
    Container.Position = pos
    Container.BackgroundTransparency = 1

    local Dot = Instance.new("Frame", Container)
    Dot.Size = UDim2.new(0, 7, 0, 7)
    Dot.Position = UDim2.new(0, 8, 0.5, -3.5)
    Dot.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    Instance.new("UICorner", Dot).CornerRadius = UDim.new(1, 0)

    local Label = Instance.new("TextLabel", Container)
    Label.Size = UDim2.new(1, -25, 1, 0)
    Label.Position = UDim2.new(0, 20, 0, 0)
    Label.BackgroundTransparency = 1
    Label.Text = name .. ": Check"
    Label.TextColor3 = Color3.fromRGB(180, 180, 180)
    Label.Font = Enum.Font.GothamSemibold
    Label.TextSize = 9
    Label.TextXAlignment = "Left"
    Label.TextTransparency = 1

    return Dot, Label
end

local PLDot, PLLabel = CreateStatus("PrisonLife", UDim2.new(0, 10, 0, 125))
local UniDot, UniLabel = CreateStatus("Universal", UDim2.new(0, 10, 0, 145))

local function UpdateStatus(dot, label, url, maintenance)
    if maintenance then
        dot.BackgroundColor3 = Color3.fromRGB(255, 165, 0) -- Orange
        label.Text = label.Text:split(":")[1] .. ": Maintenance"
        return
    end
    local success = pcall(function() game:HttpGet(url) end)
    if success then
        dot.BackgroundColor3 = Color3.fromRGB(0, 255, 120) -- Green
        label.Text = label.Text:split(":")[1] .. ": Online"
    else
        dot.BackgroundColor3 = Color3.fromRGB(255, 60, 60) -- Red
        label.Text = label.Text:split(":")[1] .. ": Offline"
    end
end

